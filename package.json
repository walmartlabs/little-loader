{
  "name": "little-loader",
  "version": "0.0.1",
  "description": "A lightweight, IE8+ JavaScript loader.",
  "main": "lib/little-loader.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/walmartlabs/little-loader.git"
  },
  "contributors": [
    {
      "name": "Brian Beck",
      "email": "brian.beck@formidable.com"
    },
    {
      "name": "Ryan Roemer",
      "email": "ryan.roemer@formidable.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/walmartlabs/little-loader/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "chai": "^3.4.1",
    "coveralls": "^2.11.4",
    "eslint": "^1.10.1",
    "eslint-config-defaults": "^7.1.1",
    "eslint-plugin-filenames": "^0.2.0",
    "guacamole": "^1.1.4",
    "http-server": "^0.8.5",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.4",
    "node-uuid": "^1.4.7",
    "phantomjs": "^1.9.18",
    "rimraf": "^2.4.4",
    "rowdy": "^0.3.5",
    "saucelabs": "^1.0.1",
    "selenium-standalone": "^4.7.1",
    "server-destroy": "^1.0.1",
    "testarmada-magellan": "^3.0.3",
    "uglify-js": "^2.6.1",
    "webdriverio": "^3.2.6"
  },
  "scripts": {
    "lint-client": "eslint -c .eslintrc-client lib test/func/fixtures",
    "lint-server": "eslint -c .eslintrc-server *.js",
    "lint-server-test": "eslint -c .eslintrc-server-test test/func/*.js test/func/spec",
    "lint": "npm run lint-client && npm run lint-server && npm run lint-server-test",
    "clean-cov": "rimraf coverage/func",
    "test-func": "magellan",
    "test-func-cov": "magellan --config=magellan-cov.json",
    "test-func-raw": "mocha --opts test/func/mocha.opts test/func/spec/",
    "test-func-raw-cov": "mocha --opts test/func/mocha-cov.opts test/func/spec/",
    "test-func-sauce": "magellan --sauce --create_tunnels --config=magellan-cov.json --browser=chrome_latest_Windows_2012_R2_Desktop,firefox_latest_Windows_2012_R2_Desktop,IE_11_Windows_2012_R2_Desktop,IE_8_Windows_2008_Desktop,IE_9_Windows_2008_Desktop,IE_10_Windows_2012_Desktop",
    "test-func-sauce-safari": "magellan --serial --sauce --create_tunnels --config=magellan-sauce-safari.json --browser=safari_7_OS_X_10_9_Desktop",
    "test-func-ci": "magellan --config=magellan-cov.json --browsers=phantomjs,firefox",
    "test": "npm run test-func",
    "test-ci": "npm run test-func-ci",
    "cov-report-func": "istanbul report --config .istanbul.func.yml --include 'coverage/func/data/coverage-*.json'",
    "check": "npm run lint && npm run test",
    "check-ci": "npm run lint && npm run test-ci",
    "server": "http-server -p 3001 .",
    "install-dev": "selenium-standalone install",
    "build": "rimraf dist && mkdir dist && uglifyjs lib/little-loader.js --stats --compress --mangle --output=dist/little-loader.min.js",
    "preversion": "npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm publish"
  }
}
